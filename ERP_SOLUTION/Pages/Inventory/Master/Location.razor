@page "/Location"
<div class="container-fluid">



    <div class="row">


        <div class="col-sm-6">
            <div class="card">
                <div class="card-header" style="text-align:center">
                    <h4>Location/Section</h4>
                </div>

                <form class="form-horizontal" asp-action="Create">

                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @*<div class="form-group">
                        <label class="control-label">Brand</label>
                        <input asp-for="SupplierName" class="form-control" />
                        <span asp-validation-for="SupplierName" class="text-danger"></span>
                        </div>*@

                        <div class="form-group">
                            <label for="exampleInputEmail1">Location/Section Name :</label>
                            <input asp-for="SupplierName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Branch :</label>
                            <input asp-for="SupplierName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address :</label>
                            <input asp-for="SupplierName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Phone :</label>
                            <input asp-for="SupplierName" class="form-control" />
                        </div>

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1">Section Hide</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
                            <label class="form-check-label" for="inlineCheckbox2">Active</label>
                        </div>



                        @*<div>
                        <div>
                        <label>Name :</label><input asp-for="SupplierName" style="width:100%">
                        </div>


                        </div>*@
                    </div>
                    <div class="card-footer">

                        <div style="float:right;padding:10px">
                            <button class="btn btn-sm btn-primary" type="submit">
                                <i class="fa fa-dot-circle-o"></i> Save
                            </button>
                            <button class="btn btn-sm btn-danger">
                                <i class="fa fa-close"></i> Close
                            </button>
                        </div>

                    </div>
                </form>

            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Location List
                </div>
                <div class="card-body">
                    <table class="table" id="demoGrid">
                        <thead>
                            <tr>
                                <th>Location Name</th>
                                <th>Branch Name</th>
                                <th>Status</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Accounts(Factory)</td>
                                <td>Deeplaid....</td>
                                <td>Active</td>
                                <td>
                                    <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button>
                                    <button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>



</div>




